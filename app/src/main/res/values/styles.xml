<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="LeftMenuItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="LeftMenuItemImage">
        <item name="android:layout_width">@dimen/space_xxxl</item>
        <item name="android:layout_height">@dimen/space_xxxl</item>
        <item name="android:layout_marginLeft">@dimen/space_xl</item>
        <item name="android:layout_marginTop">@dimen/space_m</item>
        <item name="android:layout_marginBottom">@dimen/space_m</item>
    </style>
    <style name="LeftMenuItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/left_menu_text</item>
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:layout_marginLeft">@dimen/space_xl</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <!--将dialog背景设置成透明，否则有黑边-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
