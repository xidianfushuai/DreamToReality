<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/text_l"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="各种美女福利，你懂的"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_marginTop="@dimen/space_xxl"
        android:textSize="@dimen/text_h_xl"
        android:textColor="@color/colorBlack"
        android:maxLines="2"/>
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_alignBottom="@id/iv_icon"
        android:background="@drawable/shape_green"
        android:textSize="@dimen/text_h_l"
        android:textColor="@color/colorWhite"
        android:paddingTop="@dimen/space_h_s"
        android:paddingBottom="@dimen/space_h_s"
        android:paddingLeft="@dimen/space_s"
        android:paddingRight="@dimen/space_s"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2016.12.12"
        android:layout_alignBottom="@id/iv_icon"
        android:layout_marginRight="@dimen/space_xl"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/text_h_l"/>
</RelativeLayout>